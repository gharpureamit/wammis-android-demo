<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="35dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/user_profile_photo"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:background = "#FFFFFF"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"
                android:padding="10dp"
                android:src="@drawable/hca_final" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:clickable="false"
                android:padding="20dp"
                android:textSize="20dp"
                android:text="Contact Washington Apple Health:-                "
                android:textStyle="bold" />
                />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:layout_marginLeft="35dp"
                    android:clickable="false"
                    android:padding="20dp"
                    android:textSize="16dp"
                    android:text="Customer Service Center: 1-800-562-3022"
                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:layout_marginLeft="35dp"
                    android:clickable="false"
                    android:padding="20dp"
                    android:textSize="16dp"
                    android:text="  Email:         askmedicaid@hca.wa.gov"
                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:layout_marginLeft="35dp"
                    android:clickable="false"
                    android:padding="20dp"
                    android:textSize="16dp"
                    android:text=" Webpage:    http://www.hca.wa.gov/"
                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:clickable="false"
                    android:padding="20dp"
                    android:textSize="10dp"
                    android:text="Note: Long waits are sometimes required, but self-service options are available"
                    android:textStyle="italic"
                    />
                />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>